@model DAWEB.Models.DanhMucSanPham

@{
    Layout = null;
    Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        div {
            margin-bottom: 10px;
        }

        .IP {
            background-color: #c63d3d;
            color: #fff;
        }
    </style>
</head>
<body>
    <div>
        <div style="position: absolute; width: 1130px; right: 10px">
            <h2>Xóa Danh Mục Sản Phẩm</h2>
            @using (Html.BeginForm("DeleteByID", "DanhMucSanPham", new { id = Model.Id }))
            {
                <div class="form-group" style="display:flex" :>
                    <label class="control-label col-md-2">Tên Danh Mục:</label>
                    <div class="col-md-10">
                        @Html.DisplayFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Xóa" class="btn btn-default IP" />
                    </div>
                </div>
            }
            <div style="width: 100px; height: 30px; background-color: black; border-radius: 6px; border: 1px solid #000; display: flex; justify-content: center; align-items: center">
                @Html.ActionLink("Quay lại", "DanhMucSanPham", null, new { @style = "color: white; font-weight: 600" })
            </div>
        </div>

    </div>
</body>
</html>



