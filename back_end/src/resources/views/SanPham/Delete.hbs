@model DAWEB.Models.SanPham

@{
    Layout = null;
    Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style>
        div {
            margin-bottom: 10px;
        }
        .IP{

            background-color: #c63d3d;
            color:#fff;
        }
    </style>
</head>
<body>
    <div>
        <div style="position: absolute; width: 1130px; right: 10px">

            @using (Html.BeginForm("DeleteByID", "SanPham", new { ID = Model.Id }))
            {
                <div class="form-horizontal">
                    <h4>Sản phẩm</h4>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-10">
                            @{ string img_path = "/images/" + Model.images; }
                            <img src="@img_path" style="width: 100px" />


                        </div>
                    </div>
                    <div class="form-group" style="display:flex" :>
                        <label class="control-label col-md-2">Tên Sản Phẩm:</label>
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Name)
                        </div>
                    </div>
                    <div class="form-group" style="display:flex" :>
                        <label class="control-label col-md-2">Mô tả sản phẩm:</label>
                        <div class="col-md-10">
                            @Html.DisplayFor(m => m.Mota)
                        </div>
                    </div>
                    <div class="form-group" style="display:flex" :>
                        <label class="control-label col-md-2">Giá Sản Phẩm:</label>
                        <div class="col-md-10">

                            @Html.DisplayFor(m => m.Gia)đ
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Xóa" class="btn btn-default IP" />
                        </div>
                    </div>
                </div>
            }

            <div style="width: 100px; height: 30px; background-color: black; border-radius: 6px; border: 1px solid #000; display: flex; justify-content: center; align-items: center">
                @Html.ActionLink("Quay lại", "Index", null, new { @style = "color: white; font-weight: 600" })
            </div>

        </div>

            @*<h2>Thông tin sản phẩm</h2>
            @using (Html.BeginForm("DeleteByID", "SanPham", new { ID = Model.Id }))
            {
                <div>
                    @Html.LabelFor(m => m.Id) :
                    @Html.DisplayFor(m => m.Id)
                </div>
                <div>
                    @Html.LabelFor(m => m.Name) :
                    @Html.DisplayFor(m => m.Name)
                </div>
                <div>
                    <input type="submit" value="Xoa" />
                </div>
            }
        </div>*@
    </div>
</body>
</html>

