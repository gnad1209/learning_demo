@model DAWEB.Models.SanPham

@{
    Layout = null;
    Layout = "~/Areas/Admin/Views/Shared/ViewPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div style="position: absolute; width: 1130px; right: 10px">

        <div style="display:flex;justify-content:space-between;margin-top:50px;margin-bottom:50px">
            <div style="display:flex;justify-content:center;height:100%;width:30%">
                <img alt="@Model.images" src="~/images/@Model.images" width="350" height="350" />
            </div>
            <div style="width:65%">
                <div style="display: flex; margin: 0; font-size: 35px; width: 1400px; align-items: center; margin-bottom: 20px;">
                    <label class="control-label col-md-2" style="padding-right: 0px; padding-left: 0px; margin-bottom: 0px;">Tên sản phẩm:</label>
                    <div class="col-md-10" style="font-size:30px">
                        @Html.DisplayFor(m => m.Name)
                    </div>
                </div>
                <div style="display: flex; margin: 0; font-size: 22px; width: 1000px; align-items: center; margin-bottom: 20px;">
                    <label class="control-label col-md-2" style="padding-right: 0px; padding-left: 0px; margin-bottom: 0px;">Loại sản phẩm:</label>
                    <div class="col-md-10" style="font-size:18px">
                        @Html.DisplayFor(m => m.DanhMucSanPham.Name)
                    </div>
                </div>
                <div style="display: flex; margin: 0; font-size: 22px; width: 1100px; align-items: center; margin-bottom: 20px;">
                    <label class="control-label col-md-2" style="padding-right: 0px; padding-left: 0px; margin-bottom: 0px;">Mô tả Sản Phẩm:</label>
                    <div class="col-md-10" style="font-size:18px">
                        @Html.DisplayFor(m => m.Mota)
                    </div>
                </div>
                <div style="display: flex; margin: 0; font-size: 22px; width: 1000px; align-items: center; margin-bottom: 20px; ">
                    <label class="control-label col-md-2" style="padding-right: 0px; padding-left: 0px; margin-bottom: 0px;">Giá Sản Phẩm:</label>
                    <div class="col-md-10" style="font-size:18px">
                        @string.Format("{0:#,0}", @Model.Gia)₫
                    </div>
                </div>

            </div>
        </div>
        <div style="width: 100px; height: 30px; background-color: black; border-radius: 6px; border: 1px solid #000; display: flex; justify-content: center; align-items: center">
            @Html.ActionLink("Quay lại", "Index", null, new { @style = "color: white; font-weight: 600" })
        </div>
    </div>
</body>
</html>

